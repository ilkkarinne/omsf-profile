{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://www.opengis.net/omsf-json/1.0/feature.json",
    "title": "Observations & measurements - GeoJSON Simple Feature",
    "description": "JSON Schema for validating an single GeoJSON O&M Simple Feature instance",
    "type": "object",
    "properties": {
        "type": {
            "$ref": "http://geojson.org/schema/Feature.json#/properties/type"
        },
        "geometry": {
            "$ref": "http://geojson.org/schema/Feature.json#/properties/geometry"
        },
        "bbox": {
            "$ref": "http://geojson.org/schema/Feature.json#/properties/bbox"
        },
        "properties": {
            "type": "object",
            "oneOf": [
                { "$ref": "#/definitions/genericObservationProperties" },
                { "$ref": "#/definitions/measureObservationProperties" },
                { "$ref": "#/definitions/categoryObservationProperties" },
                { "$ref": "#/definitions/countObservationProperties" },
                { "$ref": "#/definitions/truthObservationProperties" },
                { "$ref": "#/definitions/measureTimeseriesObservationProperties" }
            ]
        }
    },
    "required": [
        "type",
        "properties",
        "geometry"
    ],
    "definitions": {
        "genericObservationProperties": {
            "type": "object",
            "allOf": [
                {
                    "properties": {
                        "observationType": {
                            "type": "string",
                            "enum": [ "GenericObservation" ]
                        },
                        "result": {
                            "type": "string",
                            "format": "uri"
                        }
                    },
                    "required": [ "observationType", "result" ]
                },
                { "$ref" : "#/definitions/common" }
            ]
        },
        "measureObservationProperties": {
            "type": "object",
            "allOf": [
                {
                    "properties": {
                        "observationType": {
                            "type": "string",
                            "enum": [ "MeasureObservation" ]
                        },
                        "result": {
                            "type": "number"
                        },
                        "unitOfMeasureName": {
                            "type": "string"
                        },
                        "unitOfMeasureReference": {
                            "type": "string",
                            "format": "uri"
                        }
                    },
                    "required": [ "observationType", "result" ]
                },
                { "$ref" : "#/definitions/common" }
            ]
        },
        "categoryObservationProperties": {
            "type": "object",
            "allOf": [
                {
                    "properties": {
                        "observationType": {
                            "type": "string",
                            "enum": [ "CategoryObservation" ]
                        },
                        "result": {
                            "type": "string"
                        }
                    },
                    "required": [ "observationType", "result" ]
                },
                { "$ref" : "#/definitions/common" }
            ]
        },
        "countObservationProperties": {
            "type": "object",
            "allOf": [
                {
                    "properties": {
                        "observationType": {
                            "type": "string",
                            "enum": [ "CountObservation" ]
                        },
                        "result": {
                            "type": "integer"
                        }
                    },
                    "required": [ "observationType", "result" ]
                },
                { "$ref" : "#/definitions/common" }
            ]
        },
        "truthObservationProperties": {
            "type": "object",
            "allOf": [
                {
                    "properties": {
                        "observationType": {
                            "type": "string",
                            "enum": [ "TruthObservation" ]
                        },
                        "result": {
                            "type": "boolean"
                        }
                    },
                    "required": [ "observationType", "result" ]
                },
                { "$ref" : "#/definitions/common" }
            ]
        },
        "measureTimeseriesObservationProperties": {
            "type": "object",
            "allOf": [
                {
                    "properties": {
                        "observationType": {
                            "type": "string",
                            "enum": [ "MeasureTimeseriesObservation" ]
                        },
                        "timeStep": {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "format": "date-time",
                                "uniqueItems": true
                            }
                        },
                        "result": {
                            "type": "array",
                            "items": {
                                "type": "number"
                            }
                        },
                        "unitOfMeasureName": {
                            "type": "string"
                        },
                        "unitOfMeasureReference": {
                            "type": "string",
                            "format": "uri"
                        }
                    },
                    "required": [ "observationType", "timeStep", "result" ]
                },
                { "$ref" : "#/definitions/common" }
            ]
        },
        "common": {
            "type": "object",
            "properties": {
                "metadataReference": {
                    "type": "string",
                    "format": "uri"
                },
                "resultTime": {
                    "type": "string",
                    "format": "date-time"
                },
                "stimulusTime": {
                    "type": "string",
                    "format": "date-time"
                },
                "phenomenonTime": {
                    "type": "string",
                    "format": "date-time"
                },
                "phenomenonTimeStart": {
                    "type": "string",
                    "format": "date-time"
                },
                "phenomenonTimeEnd": {
                     "type": "string",
                     "format": "date-time"
                },
                "validTimeStart": {
                     "type": "string",
                     "format": "date-time"
                },
                "validTimeEnd": {
                     "type": "string",
                     "format": "date-time"
                },
                "observerName": {
                    "type": "string"
                },
                "observerReference": {
                    "type": "string",
                    "format": "uri"
                },
                "procedureName": {
                    "type": "string"
                },
                "procedureReference": {
                    "type": "string",
                    "format": "uri"
                },
                "observedPropertyName": {
                    "type": "string"
                },
                "observedPropertyReference": {
                    "type": "string",
                    "format": "uri"
                },
                "ultimateFeatureOfInterestName": {
                    "type": "string"
                },
                "ultimateFeatureOfInterestReference": {
                    "type": "string",
                    "format": "uri"
                },
                "proximateFeatureOfInterestName": {
                    "type": "string"
                },
                "proximateFeatureOfInterestReference": {
                    "type": "string",
                    "format": "uri"
                }
            },
            "required": [ "resultTime", "observedPropertyReference" ]
        }
     }
}
